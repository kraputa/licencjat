{% extends 'base.html.twig' %}

{% block body %}

    {% if access %}
    <h1>Page</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ page.shortName }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ page.body }}</td>
            </tr>
            <tr>
                <th>Unlockquestion</th>
                <td>{{ page.unlockQuestion }}</td>
            </tr>
            <tr>
                <th>Unlockanswer</th>
                <td>{{ page.unlockAnswer }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('page_edit', { 'id': page.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% else %}
    <div class="unlock_question">
        {% if page.questionPicture %}
            <img class="questionImage" src="/{{ page.questionPicture.getWebPath }}">
        {% endif %}
        <p>
            {{ page.unlockQuestion }}
        </p>
        {{ form_start(unlock_form) }}
        {{ form_end(unlock_form) }}
    </div>
{% endif %}
{% endblock %}
